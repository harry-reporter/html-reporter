{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "lib": ["es5", "es6", "dom"],
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "*": ["./typings/*"]
    }
  },
  "include": ["./lib/static/**/*"],
  "exclude": ["./lib/static/backup/**/*"]
}
